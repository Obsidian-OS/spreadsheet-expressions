{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "esnext",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "build/lib",
        "outDir": "build/ts",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "src",
        "importHelpers": true,
        "strict": true,
        "paths": {
            "#expr": ["./src/main.ts"]
        }
    },
    "exclude": [
        "build",
    ]
}